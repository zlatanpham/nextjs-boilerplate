{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "prettify": "prettier -c --write \"*/**\"",
    "lint": "eslint . --ext .ts,.tsx,.js && stylelint '**/*.css'",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix && stylelint '**/*.css' --fix",
    "postinstall": "husky install"
  },
  "dependencies": {
    "isomorphic-unfetch": "^3.1.0",
    "next": "10.2.3",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.0",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/node": "15.12.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.7",
    "@types/styled-components": "5.1.10",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "@zeit/next-css": "^1.0.1",
    "@zlph/eslint-config-react-app": "^0.0.7",
    "autoprefixer": "^9",
    "babel-eslint": "10.x",
    "babel-jest": "^27.0.2",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-styled-components": "^1.12.0",
    "dotenv": "^10.0.0",
    "eslint": "7.28.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "5.7.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-dom": "^4.0.0",
    "jest-styled-components": "^7.0.4",
    "lint-staged": "^11.0.0",
    "postcss": "^8",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "ts-jest": "^27.0.3",
    "twin.macro": "^2.5.0",
    "typescript": "4.3.2",
    "webpack": "^4.46.0"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.css": "stylelint --fix",
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
