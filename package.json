{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "format": "prettier -c --write \"*/**\"",
    "lint": "eslint . --ext .ts,.tsx,.js && stylelint '**/*.css'",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix && stylelint '**/*.css' --fix",
    "postinstall": "husky install"
  },
  "dependencies": {
    "isomorphic-unfetch": "^3.1.0",
    "next": "11.1.2",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.1",
    "swr": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@prettier/plugin-xml": "^1.0.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "16.7.10",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@types/styled-components": "5.1.14",
    "@typescript-eslint/eslint-plugin": "4.x",
    "@typescript-eslint/parser": "4.0.1",
    "@zlph/eslint-config-react-app": "^0.1.0",
    "autoprefixer": "^10.3.4",
    "babel-eslint": "10.x",
    "babel-jest": "^27.1.0",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-styled-components": "^1.13.2",
    "dotenv": "^10.0.0",
    "eslint": "7.x",
    "eslint-config-airbnb": "18.x",
    "eslint-config-airbnb-typescript": "12.x",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "8.x",
    "eslint-config-react": "1.x",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "5.9.2",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "3.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "4.x",
    "eslint-plugin-testing-library": "4.x",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "jest-dom": "^4.0.0",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "2.2.9",
    "ts-jest": "^27.0.5",
    "twin.macro": "2.7.0",
    "typescript": "4.4.2"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.css": "stylelint --fix",
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
